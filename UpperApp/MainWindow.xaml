<Window x:Class="UpperApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpperApp"
        mc:Ignorable="d"
        Title="Convertisseur Majuscules" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Chaîne à convertir (1-8 caractères) :" 
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="1" 
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                 MaxLength="8"
                 Padding="5"
                 Margin="0,0,0,15" TextChanged="TextBox_TextChanged"/>

        <Button Grid.Row="2" 
                Content="Convertir en majuscules" 
                Command="{Binding ConvertCommand}"
                Padding="10,5"
                Margin="0,0,0,15" Background="#FFDD2B2B"/>

        <TextBlock Grid.Row="3" 
                   Text="Résultat :" 
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="4" 
                 Text="{Binding OutputText}" 
                 IsReadOnly="True"
                 Background="#F0F0F0"
                 Padding="5"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="289,0,0,0" Grid.Row="3" VerticalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
